{
  "name": "backts-utils",
  "version": "0.1.1",
  "author": "Marc Canaleta",
  "description": "Backts framework utils package",
  "license": "ISC",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/mcanaleta/backts",
    "directory": "packages/backts-utils"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "engines": {
    "node": "20.10"
  },
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build:esm": "tsc",
    "watch:esm": "tsc --watch",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "watch:cjs": "tsc -p tsconfig.cjs.json --watch",
    "build": "npm run build:cjs && npm run build:esm",
    "watch": "npm run watch:cjs & npm run watch:esm"
  },
  "dependencies": {
    "yup": "^1.4.0"
  }
}