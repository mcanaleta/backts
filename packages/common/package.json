{
  "name": "backts-common",
  "version": "0.1.4",
  "description": "Backts framework common package",
  "author": "Marc Canaleta",
  "license": "ISC",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/mcanaleta/backts",
    "directory": "packages/backts-common"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist",
    "src",
    "tsconfig.json"
  ],
  "scripts": {
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build": "npm run build:cjs && npm run build:esm",
    "watch:esm": "tsc --watch",
    "watch:cjs": "tsc -p tsconfig.cjs.json --watch",
    "watch": "npm run watch:cjs & npm run watch:esm"
  },
  "dependencies": {
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "rollup": "^4.12.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  }
}
